generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Sample1{
  id    String  @id @map("_id") @default(auto()) @db.ObjectId
  sampleField String
  sample2 Sample2[]
  @@map("sample1")
}

model Sample2{
  id    String  @id @map("_id")@default(auto()) @db.ObjectId
  sampleField String
  sample1_id String @db.ObjectId
  sample1 Sample1 @relation(fields: [sample1_id], references: [id])
  @@map("sample2")
}